<%- include("partials/header"); -%>

<div class="customer-information">
   	<div class="container">
   	  	<div class="customer-information-inner">
   	  		<div class="card-title welcoming"><h2><%= customer.name %>'s Info!</h2></div>
   	  		
   	  		<div class="card">

  <img class="card-img-top" src="../images/u-1.png" alt="image of user" width="200px" height="300px">
  <div class="card-body">
    <h5 class="card-title"><%= customer.name %></h5>
    <p class="card-text">Email: <%= customer.email %></p>
    <p class="card-text">Available Amount: <%= customer.Amount %></p>
    <a href="/transfer/<%= customer.id %>"><button type="button" class="btn-btn-warning">Transfer Money</button></a>
  </div>
</div>
</div>
</div>
</div>

<%- include("partials/footer"); -%>